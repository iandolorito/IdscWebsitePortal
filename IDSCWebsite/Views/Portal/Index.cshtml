@{
    ViewData["Title"] = "Portal Page";
}

<body class="portal-body" style="background-color: whitesmoke; height: 100%; width: 100vw; margin-top:150px; position: fixed;">
    <div class="portal-page">
        <img src="~/images/idsc.png" alt="Logo" style="width: 200px; height: 200px;" />
